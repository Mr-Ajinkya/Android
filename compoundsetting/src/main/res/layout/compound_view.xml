<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:imageSize="http://schemas.android.com/tools"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:weightSum="1"
    android:paddingTop="10dp"
    >

    <ImageView
        android:id="@+id/imgFinger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        app:srcCompat="@drawable/ic_fingerprint_black_24dp"

        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"

        >

        <TextView
            android:id="@+id/txtText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen Lock"
            android:textColor="#000000"
            android:textSize="20sp"
        />
        <TextView
            android:id="@+id/txtText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock with your FingerPrint"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        app:srcCompat="@drawable/ic_more"
        />
</LinearLayout>